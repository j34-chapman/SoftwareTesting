<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" alignment="CENTER" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BookEditDialogController" prefWidth="400" prefHeight="400">
    <!-- Title -->
    <Text text="Edit Book Details" style="-fx-font-size: 18px; -fx-text-fill: #344E41;" />

    <!-- Book Title -->
    <HBox spacing="10">
        <Label text="Title" />
        <TextField fx:id="titleField" promptText="Title" styleClass="text-field" />
    </HBox>

    <!-- Author First Name -->
    <HBox spacing="10">
        <Label text="Author First Name" />
        <TextField fx:id="authorFirstNameField" promptText="Author First Name" styleClass="text-field" />
    </HBox>

    <!-- Author Surname -->
    <HBox spacing="10">
        <Label text="Author Surname" />
        <TextField fx:id="authorSurnameField" promptText="Author Surname" styleClass="text-field" />
    </HBox>

    <!-- ISBN -->
    <HBox spacing="10">
        <Label text="ISBN" />
        <TextField fx:id="isbnField" promptText="ISBN" styleClass="text-field" />
    </HBox>

    <!-- Publish Date -->
    <HBox spacing="10">
        <Label text="Publish Date" />
        <DatePicker fx:id="publishDateField" promptText="Publish Date" styleClass="text-field" />
    </HBox>

    <!-- Genre -->
    <HBox spacing="10">
        <Label text="Genre" />
        <ComboBox fx:id="genreField" styleClass="text-field" />
    </HBox>

    <!-- Publisher Name -->
    <HBox spacing="10">
        <Label text="Publisher Name" />
        <TextField fx:id="publisherNameField" promptText="Publisher Name" styleClass="text-field" />
    </HBox>

    <!-- Availability Status -->
    <HBox spacing="10">
        <Label text="Availability Status" />
        <ComboBox fx:id="availabilityStatusField" styleClass="text-field" />
    </HBox>

    <!-- Book Condition -->
    <HBox spacing="10">
        <Label text="Condition" />
        <ComboBox fx:id="conditionField"  styleClass="text-field" />
    </HBox>

    <!-- Save and Cancel Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" styleClass="button" />
        <Button text="Cancel" onAction="#handleCancel" styleClass="button" />
    </HBox>
</VBox>
