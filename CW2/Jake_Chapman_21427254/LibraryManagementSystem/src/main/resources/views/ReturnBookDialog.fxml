<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReturnBookDialogController" prefHeight="300.0" prefWidth="400.0" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Loan ID Field -->
    <HBox spacing="10">
        <Label text="Loan ID:"/>
        <TextField fx:id="loanIdField" editable="false" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Member ID Field -->
    <HBox spacing="10">
        <Label text="Member ID:"/>
        <TextField fx:id="memberIdField" editable="false" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Book ID Field -->
    <HBox spacing="10">
        <Label text="Book ID:"/>
        <TextField fx:id="bookIdField" editable="false" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Loan Date Field -->
    <HBox spacing="10">
        <Label text="Loan Date:"/>
        <DatePicker fx:id="loanDateField" editable="false" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Return Date Field -->
    <HBox spacing="10">
        <Label text="Return Date:"/>
        <DatePicker fx:id="returnDateField" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Confirm Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Confirm" fx:id="confirmButton" onAction="#handleConfirmReturn"/>
    </HBox>

</VBox>
